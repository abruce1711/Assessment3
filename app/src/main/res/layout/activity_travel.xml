<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.andrewbruce.assessment3.MenuActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgPlace1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:onClick="trainTimes_Click"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/train" />

            <TextView
                android:id="@+id/lblPlaceTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgPlace1"
                android:onClick="trainTimes_Click"
                android:text="Train Timetables"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/imgPlace2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lblPlaceTitle1"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:onClick="busTimes_Click"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/busses" />

            <TextView
                android:id="@+id/lblPlaceTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgPlace2"
                android:onClick="busTimes_Click"
                android:text="Bus Timetables"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/imgPlace3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lblPlaceTitle2"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:onClick="subwayTimes_Click"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/subway" />

            <TextView
                android:id="@+id/lblPlaceTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgPlace3"
                android:onClick="subwayTimes_Click"
                android:text="Subway Timetables"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textSize="18sp" />


        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
